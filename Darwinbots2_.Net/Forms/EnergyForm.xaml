<Window x:Class="DarwinBots.Forms.EnergyForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:DarwinBots.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:EnergyViewModel}"
        mc:Ignorable="d" Title="Energy Management" Style="{StaticResource OptionsForm}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Header="Incoming Energy">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CheckBox IsChecked="{Binding EnableDayNightCycles}">Enable Day Cycles</CheckBox>
                <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label IsEnabled="{Binding EnableDayNightCycles}">Period</Label>
                    <TextBox IsEnabled="{Binding EnableDayNightCycles}" Grid.Column="1" Text="{Binding DayNightCyclePeriod}" />
                </Grid>
                <CheckBox Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">Enable Weather</CheckBox>
                <GroupBox Grid.Row="1" Grid.Column="1" Header="Tide Simulator (Advanced)">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <CheckBox IsChecked="{Binding EnableTides}" Grid.ColumnSpan="2">Enable Tides</CheckBox>
                        <TextBox IsEnabled="{Binding EnableTides}" Grid.Row="1" Text="{Binding TidesCyclesOff}" Grid.Column="1" />
                        <TextBlock IsEnabled="{Binding EnableTides}" Grid.Row="1" Grid.Column="2">cycles (off)</TextBlock>
                        <Label IsEnabled="{Binding EnableTides}" Grid.Row="2" Grid.Column="0">offset</Label>
                        <TextBox IsEnabled="{Binding EnableTides}" Text="{Binding TidesCyclesOn}" Grid.Row="2" Grid.Column="1" />
                        <TextBlock IsEnabled="{Binding EnableTides}" Grid.Row="2" Grid.Column="2">cycles</TextBlock>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" Header="Thresholds">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Grid.RowSpan="3">When Threshold reached:</Label>
                        <RadioButton IsChecked="{Binding ThresholdSuspendsDayCycles}" Grid.Row="0" Grid.Column="1" GroupName="ThresholdMode">Temporarily Suspend Day Cycles</RadioButton>
                        <RadioButton IsChecked="{Binding ThresholdAdvancesSun}" Grid.Row="1" Grid.Column="1" GroupName="ThresholdMode">Permanently Toggle Sun State</RadioButton>
                        <RadioButton IsChecked="{Binding ThresholdAdvancesSun}" Grid.Row="2" Grid.Column="1" GroupName="ThresholdMode">Advance Sun to Dawn / Dusk</RadioButton>
                        <CheckBox IsChecked="{Binding EnableSunGoesDownThreshold}" Grid.Row="3" Grid.Column="0">Sun goes down if nrg &gt;</CheckBox>
                        <TextBox IsEnabled="{Binding EnableSunGoesDownThreshold}" Text="{Binding SunGoesDownThreshold}" Grid.Column="1" Grid.Row="3" />
                        <CheckBox IsChecked="{Binding EnableSunComesUpThreshold}" Grid.Row="4" Grid.Column="0">Sun comes up if nrg &lt;</CheckBox>
                        <TextBox IsEnabled="{Binding EnableSunComesUpThreshold}" Text="{Binding SunComesUpThreshold}" Grid.Column="1" Grid.Row="4" />
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button IsDefault="True" Click="Okay_Click">Okay</Button>
            <Button IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
